<Window x:Class="DumplingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DumplingWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        WindowStyle="None" ResizeMode="CanMinimize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        AllowsTransparency="True" Background="Transparent" 
        >

    <Border CornerRadius="25 25 0 0"  Padding="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="DarkRed" Offset="0.0" />
                <GradientStop Color="black" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>
        <!-- MAIN GRID-->
        <Grid Background="Transparent">
            <Grid.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" BlurRadius="15" Opacity="0.5"/>
            </Grid.Effect>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />

                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <Grid Height="80" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="House of Dumplings" FontSize="40" FontWeight="Bold" Foreground="Gold"
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" />

                <!-- Minimize Button -->
                <Button Content="_" HorizontalAlignment="Right" Margin="0,13,5,0" VerticalAlignment="Top"
                        Width="30" Height="30" Background="DarkRed" BorderBrush="Black"
                        Grid.Column="1" Click="MinimizeButton_Click"/>

                <!-- Close Button -->
                <Button Content="X" HorizontalAlignment="Right" Margin="0,13,20,0" VerticalAlignment="Top"
                        Width="30" Height="30" Background="DarkRed" BorderBrush="Black"
                        Grid.Column="2" Click="CloseButton_Click"/>
            </Grid>



            <TabControl Grid.Row="1" Margin="10">
                <TabItem Header="Start">

                </TabItem>
                <TabItem Header="Ordrar">

                </TabItem>

                <!-- TAB FOR DISHES -->
                <TabItem Header="Hantera maträtter" Height="20" VerticalAlignment="Top">

                    <Grid Background="#eee">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TabControl Grid.Column="0" Grid.Row="1" Margin="10,10,10,10" Height="432">


                            <!-- Add dishes-->
                            <TabItem Header="Lägg till">
                                <Border Padding="10">
                                    <StackPanel>

                                    </StackPanel>

                                </Border>
                            </TabItem>

                            <!-- Update dishes-->
                            <TabItem Header="Ändra">
                                <Border Padding="10">
                                    <StackPanel>


                                    </StackPanel>

                                </Border>
                            </TabItem>
                            <!-- Add dishes-->
                            <TabItem Header="ta bort">
                                <Border Padding="10">
                                    <StackPanel>


                                    </StackPanel>

                                </Border>
                            </TabItem>
                        </TabControl>

                        <!-- Available dishes -->
                        <Grid Grid.Column="1" Margin="10">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />

                                <RowDefinition Height="*" />

                            </Grid.RowDefinitions>

                            <TextBlock Text="Tillgängliga rätter" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Grid.Row="0" />
                            <ListBox x:Name="ListOfDishes" ItemsSource="{Binding FoodViewModel.FoodItems}" Margin="0,26,0,0" Grid.RowSpan="2">

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                            <TextBlock Text="{Binding Description}" />
                                            <TextBlock Text="{Binding Price}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>

                            </ListBox>
                        </Grid>
                    </Grid>

                </TabItem>

                <!-- TAB FOR DRINKS-->
                <TabItem Header="Hantera drycker">

                </TabItem>
                <TabItem Header="Kundhistorik">

                </TabItem>
                <TabItem Header="Personal">

                </TabItem>


            </TabControl>
        </Grid>
    </Border>
</Window>
